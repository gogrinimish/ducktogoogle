{
  "manifest_version": 2,
  "name": "Duck to Google",
  "version": "1.0",
  "description": "Quickly switch from DuckDuckGo to Google search results",
  "author": "Your Name",
  "homepage_url": "https://github.com/yourusername/ducktogoogle",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "activeTab",
    "*://duckduckgo.com/*"
  ],
  "page_action": {
    "default_icon": {
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    },
    "default_title": "Search on Google instead",
    "show_matches": ["*://duckduckgo.com/*"]
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "ducktogoogle@yourdomain.com",
      "strict_min_version": "57.0"
    }
  }
} 